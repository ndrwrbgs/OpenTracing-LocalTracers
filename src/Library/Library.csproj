<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45</TargetFrameworks>
    <RootNamespace>OpenTracing.Contrib.LocalTracers</RootNamespace>
    <AssemblyName>OpenTracing.Contrib.LocalTracers</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.2.0</Version>
    <Authors>ndrwrbgs</Authors>
    <Company />
    <Product />
    <PackageLicenseUrl>https://github.com/ndrwrbgs/OpenTracing-LocalTracers/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/ndrwrbgs/OpenTracing-LocalTracers</PackageProjectUrl>
    <PackageIconUrl>http://opentracing.io/img/favicon-32x32.png</PackageIconUrl>
    <Description>ITracer that helps logging to console or disk.</Description>
    <PackageReleaseNotes>Various bug fixes from https://github.com/ndrwrbgs/OpenTracing-LocalTracers/issues</PackageReleaseNotes>
    <Copyright>Copyright 2019</Copyright>
    <PackageTags>OpenTracing</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CsvHelper" Version="3.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="6.0.1" />
    <PackageReference Include="OpenTracing" Version="0.12.0" />
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.1">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="OpenTracing.Contrib.Decorators" Version="0.0.3" />
    <PackageReference Include="System.Buffers" Version="4.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Config\" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.Runtime.Caching" />
  </ItemGroup>

</Project>
